generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
}

model uploadfile {
  id        String  @id @default(uuid())
  upload_id String
  file      String? @db.VarChar(700)
  isLast    Boolean @default(false)
  uploads   uploads @relation(fields: [upload_id], references: [id], map: "uploadFile_upload_id_fkey", onDelete: Cascade)

  @@index([upload_id], map: "uploadFile_upload_id_fkey")
}

model uploads {
  id         String       @id @default(uuid())
  motif      String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  clientId   String
  uploadfile uploadfile[]
  user       user         @relation(fields: [clientId], references: [id], map: "Uploads_clientId_fkey")

  @@index([clientId], map: "Uploads_clientId_fkey")
}

model user {
  id             String    @id @default(uuid())
  Role           user_Role @default(USER)
  fullName       String
  situation      Boolean   @default(false)
  email          String    @unique(map: "User_email_key")
  password       String
  isTokenExpired Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  uploads        uploads[]
}

enum user_Role {
  ADMIN
  USER
}
